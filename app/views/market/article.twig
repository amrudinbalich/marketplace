{% extends "layouts/master.twig" %}
{% set title = article.title %}

{% block content %}
<div class="container mt-4">

    {% include "components/buttons/back-to-listings.twig" %}

    {% include "components/breadcrumb_nav_path.twig" with { 
        category_id: article.category_id, 
        category_name: article.category_name 
    } %}
    <!-- Breadcrumb::end -->

    <div class="row">
        <!-- Product Image Section -->
        <div class="col-md-8 mb-4 h-50">

            <!-- Image -->
            <div class="card border-0 shadow-sm mb-4">
                {% if article.image %}
                    <img src="/marketplace/assets/images/articles/{{ article.image }}" 
                         class="card-img-top" 
                         alt="{{ article.title }}"
                         style="height: 400px; object-fit: cover;">
                {% else %}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                         style="height: 400px;">
                        <i class="fas fa-image fa-4x text-muted"></i>
                    </div>
                {% endif %}
            </div>
            <!-- Image::end -->

            <!-- description::start -->
            <div class="card border-0 shadow-sm p-4 mb-4">
                <!-- Category -->
                <!-- todo: tags -->
                <div class="mb-4">
                    <a href="/marketplace/market?category={{ article.category_id }}" 
                        class="text-decoration-none">
                        <span class="badge bg-secondary fs-6">{{ article.category_name }}</span>
                    </a>
                </div>

                <div class="mb-2">
                    <h1 class="h2 mb-3">{{ article.title }}</h1>
                    <div class="d-flex align-items-center mb-3">
                        <span class="h3 text-primary fw-bold me-3">{{ article.price }} KM</span>

                        {% if article.status == 'available' %}
                            <span class="badge bg-success fs-6 mb-2">Available</span>
                        {% else %}
                            {% include "components/badges/sold-out.twig" %}
                        {% endif %}
                    </div>
                </div>

                <!-- Category -->
                {# <div class="mb-4">
                    <span class="text-muted">Category:</span>
                    <a href="/marketplace/market?category={{ article.category_id }}" 
                        class="text-decoration-none">
                        <span class="badge bg-secondary fs-6">{{ article.category_name }}</span>
                    </a>
                </div> #}

                <!-- Description -->
                <div class="mb-4">
                    <h5 class="mb-3">Description</h5>
                    <p class="text-muted lh-base">{{ article.description }}</p>
                </div>
            </div>
            <!-- description::end -->

        </div>

        <!-- Retailer Information::start -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">

                    <!-- Seller Information -->
                    <div class="mb-4">
                        {# <h5 class="mb-3">Seller Information</h5> #}
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-user-circle fa-2x text-muted me-3"></i>
                            <div>
                                <a href="/marketplace/market/user/{{ article.user_id }}" 
                                   class="text-decoration-none fw-bold">{{ article.user_name }}</a>
                                <div class="text-muted small">Member since {{ article.created_at|date('F Y') }}</div>
                            </div>
                        </div>
                    </div>

                    <!-- Posted Date -->
                    <div class="mb-4">
                        <span class="text-muted">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Posted on {{ article.created_at|date('F d, Y') }}
                        </span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        {% if article.status != 'available' %}
                            <button disabled class="btn btn-primary btn-lg" 
                                    onclick="window.location.href = '/marketplace/market/message/{{ article.user_id }}'">
                                <i class="fas fa-envelope me-2"></i>
                                Send Message
                            </button>
                            <span class="text-muted">This item is sold out.</span>
                        {% else %}
                            <button class="btn btn-primary btn-lg" 
                                    onclick="window.location.href = '/marketplace/market/message/{{ article.user_id }}'">
                                <i class="fas fa-envelope me-2"></i>
                                Send Message
                            </button>
                        {% endif %}

                        {# <button class="btn btn-outline-secondary" 
                                onclick="window.history.back()">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Listings
                        </button> #}
                    </div>
                </div>
            </div>
        </div>
        <!-- Retailer Information::end -->

    </div>

    <!-- Related Articles Section -->
    <div class="row mt-5 h-50">
        <div class="card border-0 shadow-sm p-4 col-12">
            <h3 class="mb-4">Similar Items</h3>
            <div class="row" id="related-articles">
                <!-- This could be populated with related articles from the same category -->
                <div class="col-12 text-center text-muted">
                    <i class="fas fa-search fa-2x mb-3"></i>
                    <p>No similar items found</p>
                </div>
            </div>
        </div>
    </div>

</div>


{% endblock %}